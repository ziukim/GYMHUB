<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kh.gymhub.model.mapper.InbodyMapper">
    <resultMap id="inbodyResultMap" type="InbodyRecord">
        <result column="INBODY_NO" property="inbodyNo"/>
        <result column="INBODY_DATE" property="inbodyDate"/>
        <result column="WEIGHT" property="weight"/>
        <result column="SMM" property="smm"/>
        <result column="PBF" property="pbf"/>
        <result column="BMI" property="bmi"/>
        <result column="MEMBER_NO" property="memberNo"/>
    </resultMap>

    <insert id="insertInbody" parameterType="InbodyRecord">
        INSERT INTO INBODY_RECORD
        (
        INBODY_NO,
        INBODY_DATE,
        WEIGHT,
        SMM,
        PBF,
        BMI,
        MEMBER_NO
        )
        VALUES(
        SEQ_INBODY_NO.NEXTVAL,
        SYSDATE,
        #{weight},
        #{smm},
        #{pbf},
        #{bmi},
        #{memberNo}
        )
    </insert>

    <select id="selectInbodyList" parameterType="_int" resultMap="inbodyResultMap">
        SELECT INBODY_NO,
        INBODY_DATE,
        WEIGHT,
        SMM,
        PBF,
        BMI,
        MEMBER_NO
        FROM INBODY_RECORD
        WHERE MEMBER_NO = #{memberNo}
        ORDER BY INBODY_DATE DESC
    </select>

    <select id="selectLatestInbody" parameterType="_int" resultMap="inbodyResultMap">
        SELECT INBODY_NO,
        INBODY_DATE,
        WEIGHT,
        SMM,
        PBF,
        BMI,
        MEMBER_NO
        FROM INBODY_RECORD
        WHERE MEMBER_NO = #{memberNo}
        AND ROWNUM = 1
        ORDER BY INBODY_DATE DESC
    </select>
</mapper>